<p id="notice"><%= notice %></p>

<ul class="nav nav-tabs" role="tablist">
  <li><%= link_to 'View Parks', parks_path %></li>
  <li><%= link_to 'New Park', new_park_path %></li>
  <li class="active"><%= link_to 'Trails', park_trails_path %></li>
  <li> <%= link_to 'New Trail', new_park_trail_path %></li>
  <% if current_user %><li><%= link_to 'Your Account', edit_user_registration_path %></li><% end %>
</ul>

<h1>Trails at <%= link_to(@park.name, @park) %></h1>

<table class ="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Length in Miles</th>
      <th>Difficulty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trails.each do |trail| %>
      <tr>
        <td><%= trail.name %></td>
        <td><%= trail.length %></td>
        <td><%= trail.difficulty %></td>
        <td><%= link_to 'View Reviews', trail_reviews_path(trail.id), class: 'btn btn-primary btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

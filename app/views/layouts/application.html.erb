<!DOCTYPE html>
<html>
<head>
  <title>TrailsApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

<%= render 'shared/navigation' %>

  <!-- Show logged in user and links to register, authenticate and log out -->
  <% if user_signed_in? %>
    <p>User <%= current_user.email %> is signed in </p>
    <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
  <% else %>
    <p>No User is signed in </p>
    <%= link_to "Sign In", new_user_session_path, class: 'btn btn-sucess' %>
    <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-sucess' %>
  <% end %>


          <%= yield %>


</div>
</div>
</div>
</body>
</html>

<p id="notice"><%= notice %></p>

<ul class="nav nav-tabs" role="tablist">
  <li><%= link_to 'View Parks', parks_path %></li>
  <li><%= link_to 'New Park', new_park_path %></li>
  <li><%= link_to 'Your Account', user_registration_path %></li>
  <li class="active"><%= link_to 'All Users', user_path %></li>

</ul>

<table class ="table table-hover">
  <thead>
    <tr>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
       <td> <%= user.first_name %></td>
       <td><%= user.last_name %></td>
        <td><%= user.admin %></td>
        <td><%= link_to 'Show', user, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

